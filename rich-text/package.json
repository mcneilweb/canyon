{
  "name": "lyser",
  "version": "1.0.0",
  "description": "Rich text editor as a web component",
  "author": "jonathan@mcneilweb.com",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": [
        "css",
        "d",
        "js",
        "json",
        "png",
        "svg",
        "ts"
      ],
      "silent": false
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "typescript": "^5.3.3"
  }
}
